# Environment Variables for Crypto Volatility Detection Pipeline
# Copy this file to .env and update with your values

# Kafka Configuration
KAFKA_SERVERS=localhost:9092

# Coinbase WebSocket Configuration
PAIR=BTC-USD
WS_URL=wss://ws-feed.exchange.coinbase.com
TOPIC_RAW=ticks.raw

# MLflow Configuration (if using Docker)
MLFLOW_BACKEND_STORE_URI=sqlite:////mlflow/mlflow.db
MLFLOW_DEFAULT_ARTIFACT_ROOT=/mlflow/artifacts

# Feature Engineering
WINDOW_SECONDS=60
THRESHOLD_TAU=0.000028

# Model Configuration
MODEL_TYPE=baseline
MODEL_PATH=models/artifacts/baseline/baseline_model.pkl
